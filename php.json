{
    "Wordpress Comment": {
        "prefix": "wpcomment",
        "body": [
            "/**",
            "* ",
            "* ${1:This is my special comment.",
            "* It's so special it requires multiple lines!}",
            "*/",
        ],
        "description": "Creates a comment"
    },
    "Wordpress add_action": {
        "prefix": "wpaction",
        "body": [
            "function $2(){",
            "\t$0",
            "}",
            "",
            "add_action('$1', '$2');"
        ],
        "description": "Creates add_action for WordPress"
    },
    "Wordpress shortcode": {
        "prefix": "wpshortcode",
        "body": [
            "/**",
            "* Shortcode description.",
            " * How to use: [${2:shortcode_slug}]",
            " *",
            " * @param array \\$atts The shortcode attributes.",
            " * @return string",
            " */",
            "function ${1:function_name}( \\$atts ) {",
            "\tob_start();",
            "\tinclude_once __DIR__ . '/php/${3:name}.php';",
            "\treturn ob_get_clean();",
            "}",
            "add_shortcode( '${2:shortcode_slug}', '${1:function_name}' );",
            "",
        ],
        "description": "Creates a WordPress shortcode for functions.php"
    },
    "WP Query": {
        "prefix": "wpquery",
        "body": [
            "/**",
            " * Setup Default CPT.",
            " *",
            " * File: php/name.php",
            " */",
            "",
            "\\$atts = shortcode_atts(",
            "\tarray(",
            "\t\t'number'   => -1,",
            "\t\t'orderby'  => 'menu_order',",
            "\t\t'category' => '',",
            "\t),",
            "\t\\$atts,",
            "\t'shortcode_slug'",
            "); // shortcode_slug aanpassen naar slug zoals in FUNCTIONS.PHP.",
            "",
            "\\$numberposts = \\$atts['number'];",
            "\\$order_by    = \\$atts['orderby'];",
            "\\$category    = \\$atts['category'];",
            "",
            "// args.",
            "\\$args = array(",
            "\t'post_type'      => 'my_post_type_slug', // CPT slug.",
            "\t'posts_per_page' => \\$numberposts,",
            "\t'post_status'    => 'publish',",
            "\t'orderby'        => \\$order_by,",
            "\t'order'          => 'ASC',",
            "//\t'tax_query'      => array(",
            "//\t\tarray(",
            "//\t\t\t'taxonomy' => 'my_category_slug', // Uw categorie slug.",
            "//\t\t\t'field'    => 'slug',",
            "//\t\t\t'terms'    => \\$category,",
            "//\t\t\t'operator' => 'AND',",
            "//\t\t),",
            "//\t),",
            ");",
            "",
            "\\$my_post_type = new WP_Query( \\$args );",
            "",
            "if ( \\$my_post_type->have_posts() ) :",
            "\twhile ( \\$my_post_type->have_posts() ) :",
            "\t\t\\$my_post_type->the_post(); ?>",
            "",
            "\t\t<p>Hello world!</p>",
            "",
            "<?php",
            "\tendwhile;",
            "\twp_reset_postdata();",
            "",
            "else :",
            "\t_e( 'Woops! Niks gevonden.', 'flux' );",
            "endif;",
            ""
        ]
    },
    "ignore": {
        "prefix": "ignore",
        "body": [
            "// @codingStandardsIgnoreLine",
        ],
        "description": "Ignore PHP/WP Beautify snippet for php"
    },
}
